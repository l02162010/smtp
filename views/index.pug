extends layout

block content

  main.container.py-4(data-default=defaultAddress)
    header.row.justify-content-end.mt-1.mb-xl-3
      div.col-lg-6
        h1.display-3 #{title}

      div.col-lg-6.col-md-9.mt-4
        form.input-group.mt-xl-1
          input.form-control.text-right#address(type='text', pattern="[a-z0-9!#$%&'*+/=?^_`{|}~.-]{1,64}", title='Valid email address', required, autofocus)
          div.input-group-append
            span.input-group-text @
            button.btn.btn-outline-gray.dropdown-toggle#domain(data-toggle='dropdown') #{domains[0]}
            div.dropdown-menu.dropdown-menu-right
              each domain in domains
                a.dropdown-item(href='#') #{domain}
          div.input-group-append
            button.btn.btn-success(type='submit') Go
            button#clipboard.btn.btn-outline-gray(type='button', data-toggle='tooltip', data-placement='right', data-trigger='manual', title='Copied')
              i.fa.fa-clipboard

    div.py-4.clearfix

    div.spinner
      div.bounce1
      div.bounce2
      div.bounce3

    div.alert.alert-danger.hidden
      h4.alert-heading Something has gone wrong!
      p.mb-0 Please check you entered a valid email address or try #[a.alert-link(href='/') reloading the page]

    div.jumbotron.py-4.hidden
      button#test.btn.btn-outline-primary.mt-4.float-md-right Send me a test email
      h1 No emails yet!
      p.lead.mb-0 New emails will show up here in real-time

    div.table-responsive-md
      table.table.hidden
        thead
          tr
            th From
            th Subject
            th
        tbody

  include elements/email

  include modals/delete

